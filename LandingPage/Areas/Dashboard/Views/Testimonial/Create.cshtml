<form enctype="multipart/form-data" method="post" class="mt-5 mb-3">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <input name="Name" id="title" class="form-control" type="text" placeholder="Name" />
            </div>
            <div class="input-group my-2">
                <input name="Description" id="title" class="form-control" type="text" placeholder="Description" />
            </div>
            @ViewBag.PhotoError
            <div class="input-group my-2">
                <input name="NewPhoto" id="title" class="form-control" type="file" accept=".jpg" placeholder="PhotoURL" />
            </div>
            <div class="input-group my-2">
                <h3>@ViewBag.EmptyError</h3>
            </div>
            <div class="input-group my-2">
                <input type="submit" class="btn btn-success " value="Create" />
            </div>

            <div class="mb-5 mt-3 ">
                <a class="btn btn-success" href="/dashboard/testimonial">Return Index</a>
            </div>

        </div>
    </div>
</form>

