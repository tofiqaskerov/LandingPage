@model Testimonial

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Details" class="mt-4" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Id</label>
                    <input asp-for="Id" value="@Model.Id" class="form-control" disabled />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name"   value="@Model.Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description"  value="@Model.Description" class="form-control" disabled />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoURL" class="control-label">Photo</label>
                    <input asp-for="PhotoURL"   value="@Model.PhotoURL" class="form-control" disabled />
                    <span asp-validation-for="PhotoURL" class="text-danger"></span>
                </div>
                
            </form>
        </div>
    </div>

    <div class="mb-4">
        <a class = "btn btn-success" href="/dashboard/testimonial">Return Index</a>
    </div>
</div>


