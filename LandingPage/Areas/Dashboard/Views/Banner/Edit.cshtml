@model Banner



<form enctype="multipart/form-data" method="post">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <label class="font-weight-bold">Title</label>
            </div>
            <div class="input-group my-2">
                <input value="@Model.Title" name="Title" id="title" class="form-control" type="text" placeholder="Title" />
            </div>
            <div class="input-group my-2">
                <h6 style="color:red; font-weight:600;">@ViewBag.EmptyTitle</h6>
            </div>
            <div class="input-group my-2">
                <label class="font-weight-bold">Photo</label>
            </div>
            <div class="input-group my-2">
                <input name="NewPhoto" accept=".jpg" id="title" class="form-control" type="file" placeholder="PhotoURL" />
                <br />

                <input type="hidden" name="oldPhoto" value="@Model.PhotoURL" />
            </div>
            <div class="input-group my-2">
                <h6 style="color:red; font-weight:600;">@ViewBag.PhotoError</h6>
            </div>
        </div>
        <div class="input-group my-2">
            <div class="card">
                <div class="card-body">
                    <br />
                    <img height="200" src="~/@Model.PhotoURL" />
                </div>
            </div>


        </div>
        <input type="submit" class="btn btn-primary my-2" value="Save" />
        <div @*class="mt-5"*@>
            <a class="btn btn-success" href="/dashboard/banner">Return Index</a>
        </div>
    </div>
</form>



