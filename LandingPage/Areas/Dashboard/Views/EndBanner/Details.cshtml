@model EndBanner

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Details" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Id</label>
                    <input asp-for="Id"  value="@Model.Id" class="form-control" disabled />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" value="@Model.Title" class="form-control" disabled />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoURL" class="control-label">Photo URL</label>
                    <input asp-for="PhotoURL"  value="@Model.PhotoURL" class="form-control" disabled />
                    <span asp-validation-for="PhotoURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label">Photo</label>
                </div>
                <div class="input-group my-2">
                    <div class="card">
                        <div class="card-body">
                            <br />
                            <img height="200" src="~/@Model.PhotoURL" />
                        </div>
                    </div>


                </div>

            </form>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-success" href="/dashboard/EndBanner">Return Index</a>
    </div>
</div>


